    }

run ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.py)   py $1   ;;
      *.cpp)    g++ $1 -o bin/$1 && ./bin/$1;;
      *)           echo "'$1' Cant be runned" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
